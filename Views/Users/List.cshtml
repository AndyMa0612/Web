@model IEnumerable<Badminton.Models.User>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>註冊帳號列表</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
            background-color: #D9D9D9;
            min-height: 100vh;
        }

        .top-bar {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 24px; /* 增加字體大小 */
        }

        .table-container {
            border-radius: 15px;
            overflow: hidden;
        }

        .back-button {
            display: inline-block;
            margin: 20px 0;
            padding: 10px 20px;
            background-color: #FFA500;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            background-color: #FF8C00;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h2 class="text-center mb-4">目前已註冊的帳號</h2>
        <div class="card table-container shadow">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4">學號</th>
                            <th class="px-4">密碼</th>
                            <th class="px-4">手機</th>
                            <th class="px-4">場地</th>
                            <th class="px-4">時段</th>
                            <th class="px-4">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="px-4">@user.Student</td>
                                <td class="px-4">@user.Password</td>
                                <td class="px-4">@user.Phone</td>
                                <td class="px-4">@user.Location</td>
                                <td class="px-4">@user.Time</td>
                                <td class="px-4">
                                    @using (Html.BeginForm("Delete", "Users", new { student = user.Student }, FormMethod.Post, new { style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('確定要刪除此用戶嗎？');">
                                            刪除
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="@Url.Action("Index", "Users")" class="back-button">返回首頁</a>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>